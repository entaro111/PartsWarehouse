@model PartsWarehouse.Models.Dostawcy

@{
    ViewBag.Title = "Dostawca - usuń";
}
<div class="text-center">
    <h2>Usuń</h2>
    <h4>Dostawca</h4>
    <hr />
    <h3>Jesteś pewny, że chcesz usunąć tego dostawcę?</h3>
    <hr />
</div>



<div class="detailed-list">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nazwa):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nazwa)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Miejscowosc):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Miejscowosc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Kod):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Kod)
        </dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color text-center">
        <input type="submit" value="Usuń" class="btn btn-danger" />
        @Html.ActionLink("Powrót", "Index", null, new { @class = "btn btn-default" })
    </div>
}
<br/>