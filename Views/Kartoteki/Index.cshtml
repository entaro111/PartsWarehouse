@model PagedList.IPagedList<PartsWarehouse.Models.Kartoteki>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Kartoteki";
}

<h2 class="text-center">Kartoteki</h2>
<hr />
<div>
    <p class="col-sm-1">
        @Html.ActionLink("Stwórz nową kartotekę", "Create", null, new { @class = "btn btn-default" })
    </p>
    @using (Html.BeginForm("Index", "Kartoteki", FormMethod.Get))
    {
        <div class="pull-right">
            Filtruj po nazwie lub kodzie:
            <p>
                @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
                <input type="submit" value="Szukaj" class="btn btn-default" />
            </p>
        </div>
    }
</div>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nazwa", "Index", new { sortOrder = ViewBag.NameSortParam, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Kod
        </th>
        <th>
            Miejsce
        </th>
        <th>
            Stan
        </th>
        <th>
            Jednostka
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Miejsce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JM.Nazwa)
            </td>

            <td>
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id_Kartoteki }, new { @class = "btn btn-default btn-sm" })
                @Html.ActionLink("Wydanie", "NewWydanie", new { id = item.Id_Kartoteki }, new { @class = "btn btn-default btn-sm" })
            </td>
        </tr>
    }

</table>
<hr />
Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
