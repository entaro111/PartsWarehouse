@model PagedList.IPagedList<PartsWarehouse.Models.MPK>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Miejsca powstawania kosztów";
}

<h2 class="text-center">Miejsca powstawania kosztów</h2>
<hr />
<div>
    <p class="col-sm-1">
        @Html.ActionLink("Dodaj nowe miejsce", "Create", null, new { @class = "btn btn-default" })
    </p>
    @using (Html.BeginForm("Index", "MPK", FormMethod.Get))
    {
        <div class="pull-right">
            Filtruj po nazwie:
            <p>
                @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
                <input type="submit" value="Szukaj" class="btn btn-default" />
            </p>
        </div>
    }
</div>

<table class="table">
    <tr class="breadcrumb">
        <th>
            @Html.ActionLink("Nazwa", "Index", new { sortOrder = ViewBag.NameSortParam, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td class="text-center">
                @Html.ActionLink("Edycja", "Edit", new { id = item.Id_MPK }, new { @class = "btn btn-default btn-sm" })
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id_MPK }, new { @class = "btn btn-danger btn-sm" })
                @Html.ActionLink("Lista pobrań", "Details", new { id = item.Id_MPK }, new { @class = "btn btn-default btn-sm" })
            </td>
        </tr>
    }

</table>
<hr />
Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
