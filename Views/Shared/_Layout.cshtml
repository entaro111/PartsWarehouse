<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Magazyn części</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand glyphicon glyphicon-home" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Kartoteki", "Index", "Kartoteki")</li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Rozchody i przychody</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Wydania", "Index", "Wydania")</li>
                            <li>@Html.ActionLink("Przyjęcia", "Index", "Przyjecia")</li>
                            <li>@Html.ActionLink("Zamówienia", "Index", "Zamowienia")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Ewidencje</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Pracownicy", "Index", "Osoby")</li>
                            <li>@Html.ActionLink("Dostawcy", "Index", "Dostawcy")</li>
                            <li>@Html.ActionLink("Miejsca kosztów", "Index", "MPK")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <footer class="modal-footer">
        <p>&copy; @DateTime.Now.Year - Magazyn części</p>
    </footer>
</body>

</html>
